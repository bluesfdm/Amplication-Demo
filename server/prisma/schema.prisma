datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model CookBook {
  cookType  EnumCookBookCookType
  createdAt DateTime             @default(now())
  id        String               @id @default(cuid())
  label     EnumCookBookLabel[]
  mainImg   String
  title     String
  updatedAt DateTime             @updatedAt
}

enum EnumCookBookCookType {
  Cook
  Fry
}

enum EnumCookBookLabel {
  Delicious
  Recommend
}